{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cli/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "esbuild apps/cli/src/main.ts --bundle --platform=node --target=node22 --format=cjs --outfile=dist/apps/cli/openspawn.cjs --external:fsevents"
      },
      "outputs": ["{workspaceRoot}/dist/apps/cli"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx apps/cli/src/main.ts"
      }
    }
  }
}
